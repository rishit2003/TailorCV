# ==========================================
# TailorCV Environment Variables Template
# ==========================================
# INSTRUCTIONS:
# 1. Copy this file: cp env.example .env
# 2. Fill in your actual API keys and credentials in .env
# 3. Never commit .env file to git (it's in .gitignore)
# ==========================================

# ==========================================
# GEMINI API CONFIGURATION
# ==========================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ==========================================
# MONGODB CONFIGURATION
# ==========================================
# Option 1: Local MongoDB (Docker or installed)
MONGODB_URI=mongodb://localhost:27017/tailorcv_db

# Option 2: MongoDB Atlas (Cloud) - Uncomment and use this for production
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/tailorcv_db?retryWrites=true&w=majority

MONGODB_DB_NAME=tailorcv_db
MONGODB_COLLECTION=cvs

# ==========================================
# REDIS CONFIGURATION
# ==========================================
# For local development
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# For production with authentication (uncomment):
# REDIS_PASSWORD=your_redis_password_here

# ==========================================
# RABBITMQ CONFIGURATION
# ==========================================
# For local development
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_QUEUE=cv_events
RABBITMQ_EXCHANGE=cv_exchange

# For production (uncomment and update):
# RABBITMQ_HOST=your_rabbitmq_host
# RABBITMQ_USER=your_rabbitmq_user
# RABBITMQ_PASSWORD=your_rabbitmq_password

# ==========================================
# PINECONE CONFIGURATION
# ==========================================
# Get your API key from: https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=tailorcv-vectors

# ==========================================
# SERVICE URLS (Inter-Service Communication)
# ==========================================
# For local development (running services directly with uvicorn)
STORING_SERVICE_URL=http://localhost:8001
GEMINI_SERVICE_URL=http://localhost:8002
VECTOR_SERVICE_URL=http://localhost:8003
API_GATEWAY_URL=http://localhost:8000

# For Docker Compose (services communicate via container names):
# STORING_SERVICE_URL=http://storing_service:8001
# GEMINI_SERVICE_URL=http://gemini_service:8002
# VECTOR_SERVICE_URL=http://vector_service:8003

# ==========================================
# SERVICE PORTS (External Access)
# ==========================================
API_GATEWAY_PORT=8000
STORING_SERVICE_PORT=8001
GEMINI_SERVICE_PORT=8002
VECTOR_SERVICE_PORT=8003

# ==========================================
# EMBEDDING MODEL CONFIGURATION
# ==========================================
EMBEDDING_MODEL_NAME=BAAI/bge-large-en-v1.5
EMBEDDING_DIMENSION=1024

# ==========================================
# APPLICATION SETTINGS
# ==========================================
# Environment: development, staging, production
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# ==========================================
# OPTIONAL: SECURITY SETTINGS (Future)
# ==========================================
# JWT_SECRET_KEY=your_jwt_secret_key_here
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==========================================
# OPTIONAL: RATE LIMITING (Future)
# ==========================================
# RATE_LIMIT_ENABLED=false
# RATE_LIMIT_MAX_REQUESTS=100
# RATE_LIMIT_WINDOW_SECONDS=60

